{
  "manifest_version": 3,
  "name": "AI Cover Letter Generator",
  "version": "1.0",
  "description": "Generate personalized cover letters using your resume and a job description.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ]
}